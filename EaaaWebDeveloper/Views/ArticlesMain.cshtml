@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using umbraco.cms.businesslogic.media;
@using Umbraco.Core.Media
@{
    Layout = "Master.cshtml";
}


<div>
       @{
           if (CurrentPage.HasValue("imageSlide"))
           {
               int i = 1;
               foreach (var item in CurrentPage.imageSlide.Split(','))
               {
                   i++;
                   if (i == 2) {
                   var dynamicMediaItem = Umbraco.Media(item);

                    <div style="background: url(@dynamicMediaItem.umbracoFile)
                                no-repeat center center fixed; 
                                -webkit-background-size: cover;
                                -moz-background-size: cover;
                                -o-background-size: cover;
                                background-size: cover; width:100%; height:600px;
                         ">
                    </div>
                   }
               }
           }
        }
</div>



@Html.Partial("RenderArticles")