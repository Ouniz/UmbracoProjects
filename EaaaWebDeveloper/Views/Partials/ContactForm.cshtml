@model EaaaWebDeveloper.Models.ContactForm

@{
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

@using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface", new object { }, new { @Class = "form-horizontal" }))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-lable" })
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.Name, new { @Class = "form-control", placeholder = "Name" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-lable" })
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.Email, new { @Class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Subject, new { @class = "col-sm-2 control-lable" })
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.Subject, new { @Class = "form-control", placeholder = "Subject" })
            @Html.ValidationMessageFor(m => m.Subject)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-sm-2 control-lable" })
        <div class="col-sm-12">
            @Html.TextAreaFor(m => m.Message, new { @Class = "form-control", placeholder = "Message" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-12">
            <button id="contact-submit" type="submit" class="btn btn-primary input-medium pull-left">Send</button>
        </div>
    </div>

}
    
